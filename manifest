#! /usr/bin/env python

files = []

import os
import commands

files.extend(commands.getoutput("hg manifest").splitlines())

for folder in "dumpi", "dharma", "sprockit":
  os.chdir(folder)
  manifest = commands.getoutput("hg manifest").splitlines()
  for file in manifest:
    files.append(os.path.join(folder, file))
  os.chdir("..")

open("sstmacro.files", "w").write("\n".join(files))

